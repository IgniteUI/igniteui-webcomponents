{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "typedocOptions": {
    "out": "dist/docs/typescript",
    "exclude": "**/*.spec.ts",
    "theme": "node_modules/igniteui-typedoc-theme/dist",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeExternals": true,
    "name": "Ignite UI for Web Components",
    "readme": "none"
  },
}
