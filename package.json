{
  "name": "igniteui-webcomponents",
  "version": "0.0.0",
  "description": "Ignite UI Web Components",
  "author": "igniteui-webcomponents",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start": "npm run storybook",
    "serve": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc",
    "prepublish": "tsc",
    "lint": "npm run lint:eslint && npm run lint:lit-analyzer && npm run lint:prettier",
    "lint:eslint": "eslint --ext .ts . --ignore-path .gitignore",
    "lint:lit-analyzer": "lit-analyzer",
    "lint:prettier": "prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook"
  },
  "dependencies": {
    "lit": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/test-runner": "^0.12.20",
    "concurrently": "^5.3.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "lit-analyzer": "^1.2.1",
    "prettier": "^2.2.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
