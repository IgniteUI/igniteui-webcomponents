{
  "name": "igniteui-webcomponents",
  "version": "0.0.0",
  "description": "Ignite UI Web Components",
  "author": "Infragistics",
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/IgniteUI/igniteui-webcomponents"
  },
  "bugs": {
    "url": "https://github.com/IgniteUI/igniteui-webcomponents/issues"
  },
  "scripts": {
    "start": "npm run storybook",
    "serve": "npm run build && concurrently -k -r \"npm:watch-scss\" \"npm:watch-ts\" \"wds\"",
    "build": "npm run build:styles && npm run build:typescript",
    "build:typescript": "tsc",
    "build:styles": "node scripts/build-styles.js",
    "build:watch": "npm run build:styles && concurrently -k -r \"npm:watch-scss\" \"npm:watch-ts\"",
    "build:docs:md": "npx web-component-analyzer \"src/**/*.ts\" --outDir docs",
    "build:docs:json": "npx web-component-analyzer \"src/**/*.ts\" --format json --outDir docs",
    "watch-scss": "node scripts/styles-watcher.js",
    "watch-ts": "tsc --watch --preserveWatchOutput",
    "lint": "npm run lint:eslint && npm run lint:lit-analyzer && npm run lint:prettier",
    "lint:eslint": "eslint --ext .ts . --ignore-path .gitignore",
    "lint:lit-analyzer": "lit-analyzer",
    "lint:prettier": "prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "npm run build && wtr --coverage",
    "test:watch": "npm run build && concurrently -k -r \"npm:watch-scss\" \"npm:watch-ts\" \"wtr --watch\"",
    "storybook": "npm run build && concurrently -k -r \"npm:watch-scss\" \"npm:watch-ts\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "npm run build && build-storybook"
  },
  "dependencies": {
    "lit": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-rollup": "^0.3.4",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/test-runner": "^0.12.20",
    "autoprefixer": "^10.2.6",
    "concurrently": "^5.3.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^7.2.0",
    "globby": "^11.0.4",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "lit-analyzer": "^1.2.1",
    "node-watch": "^0.7.1",
    "postcss": "^8.3.5",
    "prettier": "^2.2.1",
    "rollup-plugin-postcss": "^4.0.0",
    "sass": "^1.35.1",
    "sinon": "^11.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
