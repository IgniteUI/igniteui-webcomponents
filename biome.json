{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "files": {
    "include": [
      "src/**/*.ts",
      "src/**/*.js",
      "scripts/*.js",
      "scripts/*.mjs",
      "stories/*.ts"
    ],
    "ignore": ["dist/**/*"]
  },
  "vcs": {
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noStaticOnlyClass": "off"
      },
      "style": {
        "noNamespace": "error",
        "useCollapsedElseIf": "error",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
